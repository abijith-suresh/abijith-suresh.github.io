---
import Breadcrumb from "@/components/Breadcrumb.astro";
import Header from "@/components/Header.astro";
import Link from "@/components/Link.astro";
import { AUTHOR, SITE, SOCIAL_LINKS } from "@/consts";
import Layout from "@/layouts/Layout.astro";
import { BookOpen, Github, Linkedin } from "lucide-astro";
---

<Layout
  title={`About - ${SITE.title}`}
  description={`Learn more about ${AUTHOR.name} - ${AUTHOR.tagline}`}
  type="profile"
  jsonLd={{ type: "person" }}
>
  <Header slot="header" />
  <main class="w-full mx-auto flex grow flex-col gap-y-10 px-4 max-w-3xl pb-12 page-enter">
    <Breadcrumb
      items={[
        { label: "Home", href: "/", icon: "home" },
        { label: "About", icon: "about" },
      ]}
    />

    <!-- Photo + Caption -->
    <section class="flex flex-col items-center gap-4 page-enter page-enter-delay-1">
      <img
        src={AUTHOR.avatar}
        alt={AUTHOR.name}
        class="rounded-full w-36 h-36 object-cover border-2 border-border"
      />
      <p class="text-sm text-muted-foreground italic">
        Just a developer trying to figure things out.
      </p>
    </section>

    <!-- Story Content -->
    <article class="space-y-6 text-foreground/80 leading-relaxed page-enter page-enter-delay-2">
      <!-- Intro -->
      <p>
        {AUTHOR.aboutIntro}
      </p>

      <!-- Journey -->
      <p>
        {AUTHOR.aboutJourney}
      </p>

      <!-- Why I blog -->
      <section class="space-y-3">
        <h2 class="text-xl font-semibold text-foreground">Why this blog?</h2>
        <p>
          {AUTHOR.aboutBlog}
        </p>
      </section>

      <!-- Interests -->
      <section class="space-y-3">
        <h2 class="text-xl font-semibold text-foreground">When I'm not coding</h2>
        <p>
          {AUTHOR.aboutInterests}
        </p>
      </section>

      <!-- CTA -->
      <section class="space-y-4 pt-4">
        <p>
          If you want to connect, feel free to reach out. I'm always happy to chat about code,
          projects, or anything else.
        </p>

        <div class="flex flex-wrap gap-3">
          <Link
            href={SOCIAL_LINKS.github}
            external
            class="inline-flex items-center gap-2 px-4 py-2 border border-border rounded-md hover:bg-muted transition-colors"
          >
            <Github size={16} />
            GitHub
          </Link>
          <Link
            href={SOCIAL_LINKS.linkedin}
            external
            class="inline-flex items-center gap-2 px-4 py-2 border border-border rounded-md hover:bg-muted transition-colors"
          >
            <Linkedin size={16} />
            LinkedIn
          </Link>
          <Link
            href="/blog"
            class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors"
          >
            <BookOpen size={16} />
            Read the blog
          </Link>
        </div>
      </section>
    </article>
  </main>
</Layout>
