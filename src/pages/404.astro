---
import Header from "@/components/Header.astro";
import Link from "@/components/Link.astro";
import { SITE } from "@/consts";
import Layout from "@/layouts/Layout.astro";
import "@/styles/global.css";
import { Home, Search } from "lucide-astro";
---

<Layout
  title={`404 - Page Not Found | ${SITE.title}`}
  description="The page you're looking for doesn't exist."
>
  <Header />
  <main class="w-full mx-auto flex grow flex-col gap-y-6 px-4 max-w-3xl pb-12">
    <div class="flex flex-col items-center justify-center gap-y-6 py-20">
      <!-- Large 404 -->
      <div class="text-9xl font-bold text-muted-foreground/20 select-none">404</div>

      <!-- Error Message -->
      <div class="flex flex-col items-center gap-y-3 text-center">
        <h1 class="text-3xl font-bold text-foreground">Page Not Found</h1>
        <p class="text-lg text-muted-foreground max-w-md">
          The page you're looking for doesn't exist or has been moved.
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row items-center gap-4 pt-6">
        <Link
          href="/"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-primary text-primary-foreground hover:bg-primary/90 transition-colors font-medium"
        >
          <Home size={18} />
          Back to Home
        </Link>
        <Link
          href="/blog"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg border border-border bg-background hover:bg-muted transition-colors font-medium text-foreground"
        >
          <Search size={18} />
          Browse Blog
        </Link>
      </div>

      <!-- Helpful Links -->
      <div class="pt-8 flex flex-col items-center gap-y-2">
        <p class="text-sm text-muted-foreground">You might be interested in:</p>
        <div class="flex flex-wrap items-center justify-center gap-x-4 gap-y-2 text-sm">
          <Link href="/projects" underline>Projects</Link>
          <span class="text-muted-foreground">·</span>
          <Link href="/about" underline>About</Link>
          <span class="text-muted-foreground">·</span>
          <Link href="/blog" underline>Blog Posts</Link>
        </div>
      </div>
    </div>
  </main>
</Layout>
