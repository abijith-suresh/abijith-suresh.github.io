---
import Pagination from "@/components/Pagination.astro";

interface Props {
  currentPage: number;
  totalPages: number;
  hasNext: boolean;
  hasPrev: boolean;
  prevUrl: string | null;
  nextUrl: string | null;
  ariaLabel: string;
}

const { currentPage, totalPages, hasNext, hasPrev, prevUrl, nextUrl, ariaLabel } = Astro.props;
---

<div class="flex flex-col gap-6">
  <slot name="items" />
  <Pagination
    currentPage={currentPage}
    totalPages={totalPages}
    prevUrl={prevUrl}
    nextUrl={nextUrl}
    hasPrev={hasPrev}
    hasNext={hasNext}
    ariaLabel={ariaLabel}
  />
</div>
