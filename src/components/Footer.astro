---
import Link from "@/components/Link.astro";
import { NAV_LINKS, SITE, SOCIAL_LINKS } from "@/consts";
import { cn } from "@/lib/utils";
import { Github, Linkedin, Rss, Twitter } from "lucide-astro";

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border bg-background">
  <div class="mx-auto max-w-3xl px-4 py-8">
    <div class="flex flex-col gap-y-6">
      <!-- Top Section: Navigation and Social Links -->
      <div class="flex flex-col sm:flex-row items-center justify-between gap-6">
        <!-- Navigation Links -->
        <nav class="flex flex-wrap items-center justify-center gap-x-6 gap-y-2 text-sm">
          {
            NAV_LINKS.map((link) => (
              <Link
                href={link.href}
                class="text-foreground/60 hover:text-foreground transition-colors"
              >
                {link.label}
              </Link>
            ))
          }
          <Link
            href="/rss.xml"
            class="text-foreground/60 hover:text-foreground transition-colors"
          >
            RSS
          </Link>
        </nav>

        <!-- Social Links -->
        <div class="flex items-center gap-3">
          <Link
            href={SOCIAL_LINKS.github}
            external
            aria-label="GitHub"
            class:list={cn(
              "inline-flex items-center justify-center size-9 rounded-md",
              "text-foreground/60 hover:text-foreground hover:bg-muted",
              "transition-colors"
            )}
          >
            <Github size={18} />
          </Link>
          <Link
            href={SOCIAL_LINKS.twitter}
            external
            aria-label="Twitter"
            class:list={cn(
              "inline-flex items-center justify-center size-9 rounded-md",
              "text-foreground/60 hover:text-foreground hover:bg-muted",
              "transition-colors"
            )}
          >
            <Twitter size={18} />
          </Link>
          <Link
            href={SOCIAL_LINKS.linkedin}
            external
            aria-label="LinkedIn"
            class:list={cn(
              "inline-flex items-center justify-center size-9 rounded-md",
              "text-foreground/60 hover:text-foreground hover:bg-muted",
              "transition-colors"
            )}
          >
            <Linkedin size={18} />
          </Link>
          <Link
            href="/rss.xml"
            aria-label="RSS Feed"
            class:list={cn(
              "inline-flex items-center justify-center size-9 rounded-md",
              "text-foreground/60 hover:text-foreground hover:bg-muted",
              "transition-colors"
            )}
          >
            <Rss size={18} />
          </Link>
        </div>
      </div>

      <!-- Bottom Section: Copyright and Credits -->
      <div class="flex flex-col sm:flex-row items-center justify-between gap-2 pt-6 border-t border-border text-sm text-muted-foreground">
        <p>
          Â© {currentYear} {SITE.author}. All rights reserved.
        </p>
        <p class="flex items-center gap-1">
          Built with
          <Link
            href="https://astro.build"
            external
            underline
            class="text-muted-foreground hover:text-foreground"
          >
            Astro
          </Link>
        </p>
      </div>
    </div>
  </div>
</footer>
