---
import Link from "@/components/Link.astro";
import SocialLinks from "@/components/SocialLinks.astro";
import { SITE } from "@/consts";
---

<section class="py-16 md:py-24">
  <div class="space-y-6">
    <!-- Greeting -->
    <div class="space-y-2 page-enter page-enter-delay-1">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight">
        {SITE.greeting}
      </h1>
      <p class="text-xl md:text-2xl text-primary font-medium">
        {SITE.role}
      </p>
    </div>

    <!-- Intro -->
    <p
      class="text-lg text-muted-foreground max-w-2xl leading-relaxed page-enter page-enter-delay-2"
    >
      {SITE.heroIntro}
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-wrap gap-3 pt-2 page-enter page-enter-delay-2">
      <Link
        href="/blog"
        class="inline-flex items-center px-5 py-2.5 rounded-md bg-primary text-primary-foreground hover:bg-primary/90 transition-colors font-medium"
        prefetch="viewport"
      >
        Read the blog
      </Link>
      <Link
        href="/about"
        class="inline-flex items-center px-5 py-2.5 rounded-md border border-border hover:bg-muted transition-colors font-medium"
        prefetch="viewport"
      >
        About me
      </Link>
    </div>

    <!-- Social Links -->
    <SocialLinks class="pt-2 page-enter page-enter-delay-3" />
  </div>
</section>
