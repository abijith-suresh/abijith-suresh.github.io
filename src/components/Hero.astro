---
import Link from "@/components/Link.astro";
import { AUTHOR, SOCIAL_LINKS } from "@/consts";
import { cn } from "@/lib/utils";
import { Cloud, Github, Linkedin, Twitter } from "lucide-astro";
---

<section class:list={cn("border border-border rounded-lg")}>
  <div class="flex flex-col space-y-1.5 p-6">
    <h1 class="text-3xl leading-none font-medium text-foreground">{AUTHOR.name}</h1>
    <p class="text-muted-foreground text-sm">
      {AUTHOR.tagline}
    </p>
  </div>
  <div class="p-6 pt-0">
    <p class="text-muted-foreground mb-6 text-sm">
      {AUTHOR.bio}
    </p>

    <div class="flex gap-3">
      <Link
        href={SOCIAL_LINKS.github}
        external
        class:list={cn(
          "inline-flex items-center justify-center",
          "size-9 rounded-md",
          "border border-border bg-background",
          "text-foreground/60 hover:text-foreground",
          "hover:bg-muted transition-colors"
        )}
      >
        <Github size={18} />
      </Link>
      <Link
        href={SOCIAL_LINKS.twitter}
        external
        class:list={cn(
          "inline-flex items-center justify-center",
          "size-9 rounded-md",
          "border border-border bg-background",
          "text-foreground/60 hover:text-foreground",
          "hover:bg-muted transition-colors"
        )}
      >
        <Twitter size={18} />
      </Link>
      <Link
        href={SOCIAL_LINKS.bluesky}
        external
        class:list={cn(
          "inline-flex items-center justify-center",
          "size-9 rounded-md",
          "border border-border bg-background",
          "text-foreground/60 hover:text-foreground",
          "hover:bg-muted transition-colors"
        )}
      >
        <Cloud size={18} />
      </Link>
      <Link
        href={SOCIAL_LINKS.linkedin}
        external
        class:list={cn(
          "inline-flex items-center justify-center",
          "size-9 rounded-md",
          "border border-border bg-background",
          "text-foreground/60 hover:text-foreground",
          "hover:bg-muted transition-colors"
        )}
      >
        <Linkedin size={18} />
      </Link>
    </div>
  </div>
</section>
