---
import { cn } from "@/lib/utils";

export interface SkillCategory {
  name: string;
  skills: string[];
}

interface Props {
  categories: SkillCategory[];
  class?: string;
}

const { categories, class: className } = Astro.props;
---

<div class:list={cn("space-y-6", className)}>
  {
    categories.map((category) => (
      <div class="flex flex-col gap-3">
        <h3 class="text-sm font-medium text-foreground/80 uppercase tracking-wide">
          {category.name}
        </h3>
        <div class="flex flex-wrap gap-2">
          {category.skills.map((skill) => (
            <span class="px-3 py-1.5 text-sm bg-muted text-foreground rounded-md border border-border">
              {skill}
            </span>
          ))}
        </div>
      </div>
    ))
  }
</div>
